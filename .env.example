# AI Chatbot Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# AI Provider API Keys (at least one required)
# ===========================================
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here
# OPENAI_API_KEY=sk-your-key-here

# ===========================================
# AI Model Configuration
# ===========================================
# Default model options:
#   Anthropic (Claude 4.5): claude-sonnet-4-5, claude-haiku-4-5, claude-opus-4-5
#   Anthropic (Legacy): claude-sonnet-3-5, claude-haiku-3
#   OpenAI: gpt-4o-mini, gpt-4o, gpt-4-turbo
AI_DEFAULT_MODEL=claude-haiku-3

# Max output tokens per response (cost control)
AI_MAX_TOKENS=2048

# Context compression settings
# Number of recent messages to keep in full (older ones get truncated)
AI_CONTEXT_RECENT_MESSAGES=6
# Max characters for older messages before truncation (~4 chars = 1 token)
AI_CONTEXT_MAX_OLDER_CHARS=500

# ===========================================
# Application Settings
# ===========================================
APP_ENV=development
APP_DEBUG=true

# ===========================================
# Rate Limits (protect your API budget!)
# ===========================================
RATE_LIMIT_GUEST_HOURLY=10
RATE_LIMIT_GUEST_DAILY=20
RATE_LIMIT_USER_HOURLY=30
RATE_LIMIT_USER_DAILY=100
