# AI Chatbot Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# AI Provider API Keys (at least one required)
# ===========================================
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here
# OPENAI_API_KEY=sk-your-key-here

# ===========================================
# AI Model Configuration
# ===========================================
# Default model options:
#   Anthropic: claude-3-haiku-20240307, claude-3-5-sonnet-20241022, claude-3-opus-20240229
#   OpenAI: gpt-4o-mini, gpt-4o, gpt-4-turbo
AI_DEFAULT_MODEL=claude-3-haiku-20240307

# Max output tokens per response (cost control)
AI_MAX_TOKENS=2048

# ===========================================
# Application Settings
# ===========================================
APP_ENV=development
APP_DEBUG=true

# ===========================================
# Rate Limits (protect your API budget!)
# ===========================================
RATE_LIMIT_GUEST_HOURLY=10
RATE_LIMIT_GUEST_DAILY=20
RATE_LIMIT_USER_HOURLY=30
RATE_LIMIT_USER_DAILY=100
