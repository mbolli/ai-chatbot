{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./public/js",
        "rootDir": "./src/ts",
        "declaration": false,
        "sourceMap": true,
        "lib": ["ES2022", "DOM", "DOM.Iterable"]
    },
    "include": ["src/ts/**/*"],
    "exclude": ["node_modules", "public"]
}
